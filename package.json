    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.9.2",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.16",
    "react-dropzone": "^10.2.1",
    "sendemail": "^4.0.0",
    "serve-favicon": "^2.5.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.4"
