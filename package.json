{
  "homepage": "https://hamidnika.github.io/chatroooms",
  "name": "chattroooms",
  "version": "2.0.0",
  "description": "chat",
  "engines": {
    "node": "10.16.x",
    "npm": "6.x"
  },
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "heroku-postbuild": "cd client && npm install && npm run build",
